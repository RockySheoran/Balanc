{
    "version": 2,
    "builds": [
      {
        "src": "src/index.ts",
        "use": "@vercel/node",
        "config": {
          "maxLambdaSize": "50mb"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/src/index.ts",
        "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS", "HEAD"]
      }
    ],
    "buildCommand": "npm run build",
    "installCommand": "npm install",
    "functions": {
      "src/index.ts": {
        "maxDuration": 30
      }
    },
    "env": {
      "NODE_ENV": "production"
    }
  }